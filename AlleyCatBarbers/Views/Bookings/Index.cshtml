@model IEnumerable<AlleyCatBarbers.Models.Booking>

@{
    ViewData["Title"] = "Index";
}

<h1>Bookings</h1>

<p>
    <form asp-action="Create" method="post">
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Time</th>
            <th>Service</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {
            <tr>
                <td>No bookings..</td>
            </tr>
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Date.ToShortDateString()</td>
                <td>@item.TimeSlot</td>
                <td>@item.Service.Type</td>
                <td>
                    <form asp-action="Edit" asp-route-id="@item.Id" method="get" class="d-inline">
                        <button type="submit" class="btn btn-secondary btn-sm">Edit</button>
                    </form>
                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                    </form>
                    <form asp-action="Details" asp-route-id="@item.Id" method="get" class="d-inline">
                        <button type="submit" class="btn btn-secondary btn-sm">Details</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

